{
  "compilerOptions": {
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationDir": "./dist",
		"noEmit": false,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true,
    "outDir": "./dist",
		"rootDir": "./src",
		"tsBuildInfoFile": "./cache/tsconfig.tsbuildinfo"
  },
  "exclude": [
    "node_modules/**/*",
		"dist/**/*"
  ],
  "include": [
		"**/*.json",
    "src/**/*",
    "src/**/~*"
  ]
}